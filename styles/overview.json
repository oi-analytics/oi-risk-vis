{
  "version": 8,
  "name": "Overview",
  "center": [105.12, 16.19],
  "height": "600px",
  "zoom": 5,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "roads_main": { "type": "vector", "url": "mbtiles://{roads_main}" },
    "roads_other": { "type": "vector", "url": "mbtiles://{roads_other}" },
    "rail": { "type": "vector", "url": "mbtiles://{rail}" },
    "boundaries": { "type": "vector", "url": "mbtiles://{boundaries}" },
    "electricity": { "type": "vector", "url": "mbtiles://{electricity}" },
    "coastal": { "type": "vector", "url": "mbtiles://{coastal}" },
    "fluvial": { "type": "vector", "url": "mbtiles://{fluvial}" },
    "cyclone": { "type": "vector", "url": "mbtiles://{cyclone}" }
  },
  "glyphs": "{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#c6e1ff"
      }
    },
    {
      "id": "adminboundaries",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "WB_countries_Admin0",
      "paint": {
        "fill-color": "#d2d2d2",
        "fill-outline-color": "#fff"
      }
    },
    {
      "id": "disputedareas",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "WB_Admin0_disputed_areas",
      "paint": {
        "fill-color": "#e0e0e0",
        "fill-outline-color": "#fff"
      }
    },
    {
      "id": "cyclone",
      "type": "fill",
      "source": "cyclone",
      "source-layer": "cyclone",
      "paint": {
        "fill-color": [
          "interpolate",
          ["linear"],
          ["get", "gust_speed_ms-1"],
          0,
          ["to-color", "rgba(255, 255, 255, 0)"],
          20,
          ["to-color", "#f9d5cb"],
          50,
          ["to-color", "#d44118"]
        ],
        "fill-outline-color": "rgba(0,0,0,0)"
      }
    },
    {
      "id": "fluvial",
      "type": "circle",
      "source": "fluvial",
      "source-layer": "fluvial",
      "paint": {
        "circle-color": [
          "interpolate",
          ["linear"],
          ["get", "depth_m"],
          0,
          ["to-color", "#58cced"],
          5,
          ["to-color", "#072f5f"]
        ],
        "circle-radius": [
          "interpolate", ["exponential", 1.5], ["zoom"],
          3, 1,
          10, 5,
          15, 150
        ]
      }
    },
    {
      "id": "coastal",
      "type": "circle",
      "source": "coastal",
      "source-layer": "coastal",
      "paint": {
        "circle-color": [
          "interpolate",
          ["linear"],
          ["get", "depth_m"],
          0,
          ["to-color", "#9df4b0"],
          5,
          ["to-color", "#0b601d"]
        ],
        "circle-radius": [
          "interpolate", ["exponential", 1.5], ["zoom"],
          3, 1,
          10, 5,
          15, 150
        ]
      }
    },
    {
      "id": "roads_other",
      "type": "line",
      "source": "roads_other",
      "source-layer": "other",
      "minzoom": 3,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": [
          "match",
          ["get", "highway"],
          ["tertiary", "tertiary_link"], "#487dbc",
          "#b2afaa"
        ],
        "line-width": {
          "base": 0.5,
          "stops": [[7, 0.5], [13, 1], [16, 3]]
        }
      }
    },
    {
      "id": "electricity",
      "type": "line",
      "source": "electricity",
      "source-layer": "electricity",
      "minzoom": 3,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#eca926",
        "line-width": {
          "base": 1,
          "stops": [[7, 1], [12, 2], [16, 12]]
        }
      }
    },
    {
      "id": "rail",
      "type": "line",
      "source": "rail",
      "source-layer": "rail",
      "minzoom": 3,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#444",
        "line-width": {
          "base": 1.5,
          "stops": [[7, 1.5], [12, 2], [16, 6]]
        }
      }
    },
    {
      "id": "secondary",
      "type": "line",
      "source": "roads_main",
      "source-layer": "secondary",
      "minzoom": 3,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#8471a8",
        "line-width": {
          "base": 1,
          "stops": [[7, 1], [12, 2], [16, 12]]
        }
      }
    },
    {
      "id": "primary",
      "type": "line",
      "source": "roads_main",
      "source-layer": "primary",
      "minzoom": 3,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#cb3e4e",
        "line-width": {
          "base": 1,
          "stops": [[7, 1], [12, 2], [16, 12]]
        }
      }
    },
    {
      "id": "motorway",
      "type": "line",
      "source": "roads_main",
      "source-layer": "motorway",
      "minzoom": 3,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#941339",
        "line-width": {
          "base": 1,
          "stops": [[7, 1], [12, 2], [16, 12]]
        }
      }
    },
    {
      "id": "trunk",
      "type": "line",
      "source": "roads_main",
      "source-layer": "trunk",
      "minzoom": 3,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#941339",
        "line-width": {
          "base": 1,
          "stops": [[7, 1], [12, 2], [16, 12]]
        }
      }
    },
    {
      "id": "country_outlines",
      "type": "line",
      "source": "boundaries",
      "source-layer": "WB_countries_Admin0",
      "paint": {
        "line-color": "#fff",
        "line-width": 2,
        "line-blur": 1
      }
    },
    {
      "id": "country_labels",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "CNTR_LB_2020_4326",
      "layout": {
        "text-field": "{NAME_ENGL}",
        "symbol-placement": "point"
      },
      "paint": {
        "text-color": "#222",
        "text-halo-color": "#fff",
        "text-halo-width": 2
      }
    }
  ]
}
