{
  "version": 8,
  "projection": {
    "type": [
      "interpolate",
      ["linear"],
      ["zoom"],
      3,
      "vertical-perspective",
      4,
      "mercator"
    ]
  },
  "sources": {
    "boundaries": {
      "type": "vector",
      "url": "pmtiles://tiles/boundaries.pmtiles"
    },
    "electricity": {
      "type": "vector",
      "url": "pmtiles://tiles/electricity.pmtiles"
    }
  },
  "glyphs": "fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#c6e1ff"
      }
    },
    {
      "id": "adminboundaries",
      "source": "boundaries",
      "source-layer": "WB_countries_Admin0",
      "type": "fill",
      "paint": {
        "fill-color": "#d2d2d2",
        "fill-outline-color": "#ffffff"
      }
    },
    {
      "id": "disputedareas",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "WB_Admin0_disputed_areas",
      "paint": {
        "fill-color": "#e0e0e0",
        "fill-outline-color": "#fff"
      }
    },
    {
      "id": "electricity",
      "type": "line",
      "source": "electricity",
      "source-layer": "electricity",
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": [
          "interpolate-lab",
          ["linear"],
          [
            "-",
            ["get", "EAD_max"],
            ["*", 0.000000917808219178, ["coalesce", ["get", "EAEL"], 0]]
          ],
          0,
          ["to-color", "#b2afaa"],
          0.000000001,
          ["to-color", "#fff"],
          0.001,
          ["to-color", "#fcfcb8"],
          0.01,
          ["to-color", "#ff9c66"],
          0.1,
          ["to-color", "#d03f6f"],
          1,
          ["to-color", "#792283"],
          10,
          ["to-color", "#3f0a72"],
          100,
          ["to-color", "#151030"]
        ],
        "line-width": ["interpolate", ["linear"], ["zoom"], 7, 1, 12, 2, 16, 12]
      }
    },
    {
      "id": "country_outlines",
      "type": "line",
      "source": "boundaries",
      "source-layer": "WB_countries_Admin0",
      "paint": {
        "line-color": "#fff",
        "line-width": 2,
        "line-blur": 1
      }
    },
    {
      "id": "country_labels",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "CNTR_LB_2020_4326",
      "layout": {
        "text-font": ["Open Sans Regular"],
        "text-field": "{NAME_ENGL}",
        "symbol-placement": "point"
      },
      "paint": {
        "text-color": "#222",
        "text-halo-color": "#fff",
        "text-halo-width": 2
      }
    }
  ]
}
